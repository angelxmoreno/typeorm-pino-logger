{
    "name": "typeorm-pino-logger",
    "version": "0.1.0",
    "description": "High-performance logging for TypeORM with Pino",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist"
    ],
    "keywords": [
        "typeorm",
        "pino",
        "logger",
        "logging",
        "typescript",
        "database",
        "orm"
    ],
    "author": "Angel S. Moreno <angelxmoreno@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/angelxmoreno/typeorm-pino-logger.git"
    },
    "bugs": {
        "url": "https://github.com/angelxmoreno/typeorm-pino-logger/issues"
    },
    "homepage": "https://typeorm-pino-logger.js.org",
    "scripts": {
        "prebuild": "bun run clean",
        "build": "tsup src/index.ts --format cjs,esm --dts --clean --sourcemap",
        "clean": "rm -rf dist",
        "prepublishOnly": "bun run build",
        "release": "release-it",
        "check-types": "tsc --noEmit",
        "lint": "biome check .",
        "lint:fix": "biome check --write",
        "test": "bun test",
        "test:watch": "bun test --watch",
        "test:coverage": "bun test --coverage",
        "docs:sync": "cd docs && bun run sync",
        "docs:dev": "cd docs && bun start",
        "docs:build": "cd docs && bun run build",
        "docs:serve": "cd docs && bun serve"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.1.1",
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@release-it/conventional-changelog": "^10.0.1",
        "@types/bun": "^1.2.18",
        "@types/node": "^24.0.14",
        "lefthook": "^1.12.2",
        "release-it": "^19.0.3",
        "tsup": "^8.5.0",
        "typedoc": "^0.26.11",
        "typedoc-plugin-markdown": "^4.3.2",
        "typescript": "^5.0.0"
    },
    "peerDependencies": {
        "pino": "^9.7.0",
        "typeorm": "^0.3.25"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
